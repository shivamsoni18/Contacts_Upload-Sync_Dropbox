        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginRight="3dp"
            android:text="SELECT ALL" />

        <android.support.v7.widget.AppCompatCheckBox
