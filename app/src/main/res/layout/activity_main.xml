<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A9E9E9E">

        <LinearLayout
            android:id="@+id/login_button"
            android:elevation="20dp"
            android:background="#1A9E9E9E"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/dblogin"
                android:tint="#3d9ae8 " />

            <TextView
                android:id="@+id/namedb"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"

                android:paddingRight="11dp"
                android:text="Login here"
                android:textAllCaps="true"
                android:textColor="#3d9ae8"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/files_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#803D9AE8"
                android:text="Upload"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_cloud_upload_black_24dp"
                android:layout_marginRight="6dp"
                android:elevation="3dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syncData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#803D9AE8"
                android:text="Sync"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/ic_sync_black_24dp"
                android:layout_marginRight="4dp"
                android:elevation="3dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="12dp"
                android:textStyle="bold" />

           <!-- <ImageView
                android:id="@+id/files_button"
